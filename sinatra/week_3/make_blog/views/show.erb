<ul>
	<li>
		<div class="row">
		  <div class="col-sm-2 col-md-4">
		    <div class="thumbnail">
		      <div class="caption">
		        <h3><%= @post.title %></h3>
		        <p><a href="/" class="btn btn-primary" role="button">Back</a> <a href="#" class="btn btn-default" role="button">Comment</a></p>
		        <p><%= @post.body %></p>
		        <p><%= @post.created_at %></p>
		        <% @comments.each do |comment| %>
		        	<a href="#" class="btn btn-default" role="button"><b><%= comment.author %> : </b><%= comment.body %></a>
		        <% end %>
		      </div>
		    </div>
		  </div>
		</div>
	</li>
</ul>

<ul>
	<% @posts.each do |post| %>
		<li>
			<div class="row">
			  <div class="col-sm-2 col-md-4">
			    <div class="thumbnail">
			      <div class="caption">
			        <h3><%= post.title %></h3>
			        <p></p>
			        <p><a href="/show/<%= post.id %>" class="btn btn-primary" role="button">Open</a> <a href="#" class="btn btn-default" role="button">Comment</a></p>
			      </div>
			    </div>
			  </div>
			</div>
		</li>
	<% end %>
</ul>
